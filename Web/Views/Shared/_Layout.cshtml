<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">*@
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">*@
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">*@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a style="font-size: 20px" class="navbar-brand" asp-area="" asp-controller="Game" asp-action="Index">Game Library</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div style="font-size: 14px" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="Index">Games</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="UserGameLibrary" asp-action="">My Library</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Categories
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="Game" asp-action="FilterByGenre" asp-route-gameGenre="Action">Action</a>
                                <a class="dropdown-item" asp-controller="Game" asp-action="FilterByGenre" asp-route-gameGenre="Role-playing">RPG</a>
                                <a class="dropdown-item" asp-controller="Game" asp-action="FilterByGenre" asp-route-gameGenre="Adventure">Adventure</a>
                                <a class="dropdown-item" asp-controller="Game" asp-action="FilterByGenre" asp-route-gameGenre="Simulation">Simulation</a>
                                <a class="dropdown-item" asp-controller="Game" asp-action="FilterByGenre" asp-route-gameGenre="Strategy">Strategy</a>
                                <a class="dropdown-item" asp-controller="Game" asp-action="FilterByGenre" asp-route-gameGenre="Sports">Sports</a>
                                <a class="dropdown-item" asp-controller="Game" asp-action="FilterByGenre" asp-route-gameGenre="Racing">Racing</a>
                            </div>
                        </li>
                        @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdministratorRole")).Succeeded)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Administration
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Game" asp-action="Create">Add Game</a>
                                    <a class="dropdown-item" asp-controller="Genre" asp-action="Create">Add Genre</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>

                @*<ul class="flex-grow"></ul>*@
                @if (User is not null && !User.Identity.IsAuthenticated)
                {
                    <div style="list-style-type: none">
                        <a class="btn btn-primary mr-2" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    </div>
                    <div style="list-style-type: none">
                        <a class="btn btn-success" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    </div>
                }
                else
                {
                    <div style="display: flex; align-items: center; gap: 20px">
                        <div style="font-size: 14px" class="text-dark" style="list-style-type: none">
                            <span>@User.Identity.Name</span>
                        </div>
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button class="mx-2 btn btn-secondary btn-sm" style="align-self: flex-end" type="submit">Logout</button>
                        </form>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
