@model BLL.DTO.CommentDTO

<h2>Comment Editing</h2>

<form asp-action="EditComment" asp-controller="Comment" asp-antiforgery="true">
    <div style="margin-top: 30px">
        <div asp-validation-summary="ModelOnly"></div>

        @Html.HiddenFor(c => c.Id)
        @Html.HiddenFor(c => c.ApplicationUserId)
        @Html.HiddenFor(c => c.ReplyToCommentId)
        @Html.HiddenFor(c => c.GameId)
        @Html.HiddenFor(c => c.NicknameToReply)
        @Html.HiddenFor(c => c.Date)

        <div class="mb-3 mt-3">
            <textarea class="form-control" asp-for="Content" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div>
            <button type="submit" style="width: 70px" class="btn btn-warning">Edit</button>
        </div>
    </div>
</form>
