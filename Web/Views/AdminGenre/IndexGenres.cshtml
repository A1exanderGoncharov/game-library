@model IEnumerable<BLL.DTO.GenreDTO>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col" style="width: 20%">Name</th>
            <th scope="col" style="width: 60%">Description</th>
            <th style="width: 15%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-weight: bold;">@item.Name</td>
                <td>@item.Description</td>
                <td style="vertical-align: middle;">
                    <div class="GenreActions" style="text-align: right">
                        @*<a class="btn btn-outline-danger" asp-action="EditGenre" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="DeleteGenre" asp-route-id="@item.Id">Delete</a>*@

                        <a class="btn btn-warning rounded-1" type="button" data-toggle="tooltip" data-placement="top" title="Edit" style="height: 35px; width: 35px; padding: 0; margin-right: 4px;" asp-action="EditGenre" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pencil" style="font-size: 15px; line-height: 35px;"></i>
                        </a>

                        <a class="btn btn-danger rounded-1" type="button" data-toggle="tooltip" data-placement="top" title="Edit" style="height: 35px; width: 35px; padding: 0;" asp-action="DeleteGenre" asp-route-id="@item.Id">
                            <i class="fa-regular fa-trash-can" style="font-size: 15px; line-height: 35px;"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
