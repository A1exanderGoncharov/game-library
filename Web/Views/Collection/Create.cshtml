@model BLL.DTO.CollectionDTO

<h2>Collection Creating</h2>

<form asp-action="Create" asp-controller="Collection" asp-antiforgery="true">
    <div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 mt-3">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" placeholder="Enter name">
            <label asp-for="Date"></label>
            <input class="form-control" asp-for="Date">
        </div>
        <div>
            <button type="submit" class="btn btn-success">Add</button>
        </div>
    </div>
</form>
