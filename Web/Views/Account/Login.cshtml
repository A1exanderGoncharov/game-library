@model BLL.DTO.UserLoginModel

<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 78vh;">
    <h2>Sign In</h2>
    <form method="post" asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>

        <div style="margin-top: 15px; width: 250px;">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" placeholder="Enter email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div style="margin-top: 15px; width: 250px;">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" placeholder="Enter password" />
            <span asp-validation-for="Password"></span>
        </div>
        @* <div style="margin-top: 15px; align-items: center;">
        <input asp-for="RememberMe" style="display: inline-block;" />
        <label asp-for="RememberMe" style="display: inline-block;"></label>
        </div>*@
        <div style="margin-top: 39px;">
            <input type="submit" class="btn btn-primary" style="width: 250px;" value="Login" />
        </div>

    </form>
</div>
